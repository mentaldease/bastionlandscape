# read in all the .i files, look for "%if" print them out
# run in Import/ dir using $utils/get_luasetup > outfilename

echo "// Automatically generated by utils/get_luasetup edit as necessary."
echo ""
echo "#ifndef __WXLUA_SETUP__"
echo "#define __WXLUA_SETUP__"
echo ""

grep "%if" *.i | awk 'BEGIN { count = 0 } \
               { len = length($2); \
                 count++; \
                 printf("#define %s",$2); \
                 for (i=0;i<40-len;i++) { printf(" ") }; print("1") } \
               END { }' | sort

echo ""
echo "#endif // __WXLUA_SETUP__"

